{
  "manifest_version": 3,
  "name": "LinkGuard - Click Safety Popup",
  "description": "Inspect link URLs using heuristic checks, phishing feeds, and a small ML model.",
  "version": "1.1",
  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "icons/ex_icon.png",
    "48": "icons/ex_icon.png",
    "128": "icons/ex_icon.png"
  },


  "permissions": [
    "storage",
    "scripting",
    "activeTab",
    "tabs"
  ],
    "host_permissions": ["<all_urls>", 
      "https://openphish.com/*"],

  "web_accessible_resources": [
    {
      "resources": [
        "model.json",
        "feeds/openphish_offline.json",
        "feeds/phishtank.json"
      ],
      "matches": ["<all_urls>"]
    }

  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/ex_icon.png",
      "48": "icons/ex_icon.png",
      "128": "icons/ex_icon.png"
    },
    "default_title": "LinkGuard"
  }
}
